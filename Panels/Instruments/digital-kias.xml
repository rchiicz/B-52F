<?xml version="1.0"?>

<!--
-->

<PropertyList>

  <name>Digital KIAS display</name>
  <w-base>120</w-base>
  <h-base>20</h-base>

  <layers>

    <layer>
      <name>background</name>
      <texture>
        <path>Aircraft/B-52F/Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
      </texture>
      <w>120</w>
      <h>20</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
      </transformations>
    </layer>

    <!-- speed below Vat 170kts -->
    <layer>
      <name>Title Red</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>0.8</red>
        <green>0.2</green>
        <blue>0.2</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IAS: </text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-55</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-12</offset>
        </transformation>
      </transformations>
    </layer>

    <!-- speed above Vat 170kts -->
    <layer>
      <condition>
        <greater-than-equals>
          <property>/velocities/airspeed-kt</property>
          <value type="double">170</value>
        </greater-than-equals>
      </condition>
      <name>Title Green</name>
      <type>text</type>
      <point-size>18</point-size>
      <color>
        <red>0.2</red>
        <green>0.8</green>
        <blue>0.2</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>IAS: </text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-55</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-12</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>KIAS display</name>
      <type>text</type>
      <font>led</font>
      <point-size>7</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/velocities/airspeed-kt</property>
          <format>%04.2f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>-7</offset>
        </transformation>
      </transformations>
    </layer>

  </layers>

</PropertyList>
